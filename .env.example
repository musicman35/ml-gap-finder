# ML Gap Finder Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# LLM Provider Selection: "anthropic" or "ollama"
LLM_PROVIDER=anthropic

# Anthropic Configuration (required when LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=sk-ant-your-key-here
LLM_ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Ollama Configuration (required when LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
LLM_OLLAMA_MODEL=llama3.1:70b

# Shared LLM settings
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=120

# =============================================================================
# Database Configuration
# =============================================================================

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/mlgapfinder

# Qdrant Vector Store
QDRANT_URL=http://localhost:6333

# Redis Cache
REDIS_URL=redis://localhost:6379

# =============================================================================
# External APIs (Optional)
# =============================================================================

# Semantic Scholar API Key (optional, for higher rate limits)
SEMANTIC_SCHOLAR_API_KEY=

# =============================================================================
# Application Settings
# =============================================================================

# Environment (development, production)
ENVIRONMENT=development

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
